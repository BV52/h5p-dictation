        "default": true
      },
      {
        "name": "typoFactor",
        "type": "select",
        "label": "Value of typos",
        "description": "Determine to which extend typing errors count as a mistake.",
        "options": [
            {
              "value": "100",
              "label": "100 %"
            },
            {
              "value": "50",
              "label": "50 %"
            },
            {
              "value": "0",
              "label": "0 %"
            }
          ],
        "default": "100 %"
      },
      {
        "name": "mistakesPassing",
        "type": "number",
        "label": "Maximum mistakes for passing",
        "description": "Maximum number of mistakes allowed for still passing",
        "optional": true,
        "min": 0
      },
      {
        "name": "mistakesMastering",
        "type": "number",
        "label": "Maximum mistakes for mastering",
        "description": "Maximum number of mistakes allowed for still mastering",
        "optional": true,
        "min": 0
      },
      {
        "name": "enableRetry",
        "label": "Enable \"Retry\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolution",
        "label": "Enable \"Solution\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      }
    ]
  },
